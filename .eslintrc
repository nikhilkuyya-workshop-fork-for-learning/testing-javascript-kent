{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.7.0-alpha.0"
    }
  },
  "globals": {
    "test": true,
    "expect": true
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "plugin:react/recommended"
  ],
  "plugins": ["react"],
  "rules": {
    "no-console": "error"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
